<h1>Update Customer</h1>

<form action="/customers/<%=@customer.id%>" method="post">
  <label>Name:</label>

  <br></br>

  <input type="text" name="customer[name]" id="customer_id" value="<%=@customer.name%>">

  <br></br>

  <label>Choose an existing Restaurant:</label>

  <h2> Restaurants </h2>
   <% Restaurant.all.each do |restaurant| %>
      <input type="checkbox" name="customer[restaurant_ids][]" id="<%= restaurant.id%>" value="<%=restaurant.id%>" <%='checked' if @customer.restaurants.include?(restaurant) %>><%=restaurant.name%></input>
  <% end %>
  <input type="submit" value="Update Customer">
</form>
